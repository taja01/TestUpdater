  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TestCaseUpdater\TestCaseUpdater.csproj" />
    <ProjectReference Include="..\TestParser\TestParser.csproj" />
  </ItemGroup>

</Project>
